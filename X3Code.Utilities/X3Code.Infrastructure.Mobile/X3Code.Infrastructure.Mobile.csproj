<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>1.5.6</PackageVersion>
        <Authors>X3-Code</Authors>
        <Description>Contains the unit of work repository pattern in .Net Standard for use with Xamarin</Description>
        <Copyright>MIT</Copyright>
        <PackageProjectUrl>https://github.com/Cantaria/X3Code.Utilities</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Cantaria/X3Code.Utilities</RepositoryUrl>
        <RepositoryType>GIT</RepositoryType>
        <Company>X3-Code</Company>
        <AssemblyVersion>1.5.6</AssemblyVersion>
        <FileVersion>1.5.6</FileVersion>
        <PackageIcon>x3code_logo.png</PackageIcon>
        <PackageReleaseNotes>1.5.6: NuGet Dependencies Updated</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.EntityFrameworkCore" Version="5.0.17" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="5.0.17" />
        <PackageReference Include="Xamarin.Forms" Version="5.0.0.2401" />
    </ItemGroup>

    <ItemGroup>
      <None Include="..\x3code_logo.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
        <Link>x3code_logo.png</Link>
      </None>
    </ItemGroup>
</Project>